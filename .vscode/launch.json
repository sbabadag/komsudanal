    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to packager",
            "cwd": "${workspaceFolder}",
            "request": "attach",
            "type": "reactnative"
        },
        {
            "name": "Debug iosselo",
            "cwd": "${workspaceFolder}",
            "request": "attach",
            "type": "reactnative"
        },
        {
            "name": "Debug Android",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "type": "reactnative",
            "platform": "android"
        },
        {
            "name": "Debug iOS",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "type": "reactnative",
            "platform": "ios"
        },
        
        
        {
            "type": "node",
            "request": "launch",
            "name": "Run expo",
            "runtimeExecutable": "expo",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}"
        },
    ]
}